{
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "headers": [ {
        // Specifies a CORS header for all font files
        "source": "**/*.@(js|css)",
        "headers": [ {
          "key": "Cache-Control",
          "value": "max-age=604800" //3600 per hour
        }]
      }
    ],
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "/robots.txt",
        "destination": "/robots.txt"
      },
      {
        "source": "/sitemap.xml",
        "destination": "/sitemap.xml"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
